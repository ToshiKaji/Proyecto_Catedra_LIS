# Activar la reescritura de URL.
RewriteEngine On

# Redireccionar las solicitudes a la página de inicio a la ruta correspondiente.
RewriteRule ^$ index.php [L]

# Redireccionar todas las demás solicitudes a la ruta correspondiente.
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [L]